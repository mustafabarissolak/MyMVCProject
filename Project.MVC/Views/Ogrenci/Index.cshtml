@model IEnumerable<Project.MVC.Models.Ogrenci>

<h2>Ogrenciler Listesi</h2>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ogrenci in Model)
        {
            <tr>
                <td>@ogrenci.Id</td>
                <td>@ogrenci.Name</td>
                <td>@ogrenci.Surname</td>
                <td>
                    <a asp-action="Details" asp-route-id="@ogrenci.Id">Detaylar</a> |
                    <a asp-action="Edit" asp-route-id="@ogrenci.Id">Düzenle</a> |
                    <a asp-action="Delete" asp-route-id="@ogrenci.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Yeni Öğrenci Ekle</a>
